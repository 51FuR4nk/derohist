# Copy to .env (ignored by git) and populate secrets before running docker compose
# Generate a fresh key with one of the following commands:
#   php artisan key:generate --show
#   openssl rand -base64 32
APP_KEY=

# URL and proxy settings (set for production deployments behind HTTPS reverse proxies)
APP_URL=https://derohist.xyz
SESSION_DOMAIN=derohist.xyz
SESSION_SECURE_COOKIE=true
TRUST_PROXIES="*"

# DERO RPC endpoints (comma-separated) used to estimate network height
DERO_RPC_ENDPOINTS=https://dero-api.mysrv.cloud/json_rpc,http://51.178.176.109:10102/json_rpc,http://dero-node-altctrl-sg.mysrv.cloud:10102/json_rpc
# Height lag threshold before showing sync banner
DERO_SYNC_LAG_THRESHOLD=10000
